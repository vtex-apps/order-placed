{
  "parser": "babel-eslint",
  "root": true,
  "extends": ["vtex", "vtex-react", "plugin:import/recommended"],
  "plugins": ["import"],
  "rules": {
    "import/no-unresolved": [
      "error",
      {
        "commonjs": true,
        "amd": true,
        "ignore": ["^([a-zA-Z@]+[-\\.]?)+"]
      }
    ],
    "no-console": ["error", { "allow": ["warn", "error"] }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "jest": true
  },
  "globals": {
    "__DEV__": true
  }
}
